{
  "version": 2,
  "builds": [
    {
      "src": "client", 
      "use": "@vercel/static-build", 
      "config": {
        "buildCommand": "npm run build", 
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}