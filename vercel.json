
{
  "buildCommand": "cd client && npm install && ./node_modules/vite/bin/vite.js build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "functions": {
    "api/controllers/*.js": {
      "runtime": "nodejs14.x"
    },
    "api/routes/*.js": {
      "runtime": "nodejs14.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}