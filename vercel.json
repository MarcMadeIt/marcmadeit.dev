{
  "builds": [
    {
      "src": "api/controllers/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/routes/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client",
      "use": "@vercel/vite"
    }
  ],
  "routes": [
    {
      "src": "/api/controllers/(.*)",
      "dest": "/api/controllers/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}